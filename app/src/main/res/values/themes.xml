<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Countries" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.Countries.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Countries.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Countries.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCheckBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/checkboxNormalColor</item>
        <item name="colorControlActivated">@color/checkboxActivatedColor</item>
    </style>

    <style name="detailTextAppearance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1C1917</item>
    </style>

    <!--Font family: Axiforma Line height: 22sp font weight 400-->
    <style name="countryTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#1C1917</item>
    </style>

    <!--Font family: Axiforma Line height: 22sp -->
    <style name="cityTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#98A2B3</item>

    </style>

</resources>